<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBgColor"
    android:orientation="vertical"
    tools:context=".Question_Fragments.InitializerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_initializer_iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:src="@mipmap/ic_cancel" />

        <TextView
            android:id="@+id/fragment_initializer_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:lines="2"
            android:padding="14dp"
            android:text="Welcome!\nmr sebastian zdroana"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/initializer_tv_welcome_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="ewweaeawea"
        android:textColor="#000"
        android:textSize="18sp" />

</LinearLayout>
