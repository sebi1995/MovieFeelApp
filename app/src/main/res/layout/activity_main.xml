<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBgColor"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zdroa.myapplication.MainActivity">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/comply_to_tmdb_tac"
        android:id="@+id/imageView"
        android:layout_weight="11598.17" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20000"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/moviefeel_logo"
        android:id="@+id/imageView2"
        android:layout_weight="1" />

    <Button
        android:id="@+id/main_b_gotoLoginActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="main_onButtonClick"
        android:text="Sign in" />

    <Button
        android:id="@+id/main_b_gotoRegisterActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="main_onButtonClick"
        android:text="Register" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100000" />

</LinearLayout>
